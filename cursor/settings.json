{
    // Hello friends, and welcome to my Cursor settings file.
    // Please use this file as a reference, and don't copy it directly.
    // It's heavily tailored to my personal preferences.

    // Editor
    "editor.fontSize": 14,
    "editor.fontFamily": "Berkeley Mono",
    "editor.fontLigatures": false,
    "editor.lineHeight": 2.0,
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 10,

    // Editor — Theme
    "catppuccin.italicKeywords": false,
    "catppuccin.italicComments": false,

    // Editor — Other
    "breadcrumbs.enabled": false,
    "editor.stickyScroll.enabled": false,

    // Explorer
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,

    // Window 
    "window.zoomPerWindow": false,
    "window.newWindowDimensions": "inherit",
    "window.commandCenter": false,
    "window.density.editorTabHeight": "compact",

    // Workbench
    "workbench.colorTheme": "Catppuccin Macchiato",
    "workbench.iconTheme": "catppuccin-macchiato",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",

    // Terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.cursorWidth": 4,
    "terminal.integrated.fontFamily": "Berkeley Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.0,

    // Vim
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "shift+k" ],
            "commands": [ "editor.action.showHover" ],
        },
        {
            "before": [ "<Esc>" ],
            "after": [ "<Esc>" ],
            "commands": [ ":nohl" ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<"],
            "commands": [
                "editor.action.outdentLines",
                "extension.vim_gv"
            ]
        },
        {
            "before": [">"],
            "commands": [
                "editor.action.indentLines",
                "extension.vim_gv"
            ]
        },
        {
            "before": [ "J" ],
            "commands": [ "editor.action.moveLinesDownAction" ]
        },
        {
            "before": [ "K" ],
            "commands": [ "editor.action.moveLinesUpAction" ]
        }
    ],

    // Formatters
    "[php]": {
        "editor.defaultFormatter": "vblinden.rectify",
        "editor.formatOnSave": true
    },
    
    // Extension — Project Manager
    "projectManager.sortList": "Recent",
    "projectManager.git.maxDepthRecursion": 1,
    "projectManager.git.baseFolders": [
        "$home\\Code\\vblinden",
        "$home\\Code\\teamblue"
    ],

    // Extension — Rectify
    "rectify.formatters": {
        "php": {
            "formatters": ["pint", "php_cs_fixer", "phpcbf"],
            "stop_after_first": true
        },
    },

    "json.schemaDownload.enable": true,
    "window.zoomLevel": 1,
}